<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation"
    app:startDestination="@id/welcome">

    <fragment
        android:id="@+id/welcome"
        android:name="com.benrostudios.syncure.ui.auth.welcome.Welcome"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcome_to_signIn"
            app:destination="@id/signIn" />
        <action
            android:id="@+id/action_welcome_to_signUp"
            app:destination="@id/signUp" />
    </fragment>
    <fragment
        android:id="@+id/signIn"
        android:name="com.benrostudios.syncure.ui.auth.signin.SignIn"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signIn_to_signinotp"
            app:destination="@id/signinotp" />
    </fragment>
    <fragment
        android:id="@+id/signUp"
        android:name="com.benrostudios.syncure.ui.auth.signup.SignUp"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUp_to_registerOtp"
            app:destination="@id/registerOtp" />
    </fragment>
    <fragment
        android:id="@+id/registerOtp"
        android:name="com.benrostudios.syncure.ui.auth.signup.RegisterOtp"
        android:label="fragment_register_otp"
        tools:layout="@layout/fragment_register_otp" >
        <action
            android:id="@+id/action_registerOtp_to_welcome"
            app:destination="@id/welcome" />
    </fragment>
    <fragment
        android:id="@+id/signinotp"
        android:name="com.benrostudios.syncure.ui.auth.signin.Signinotp"
        android:label="fragment_signinotp"
        tools:layout="@layout/fragment_signinotp" />
</navigation>